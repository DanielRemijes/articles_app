<div class="p-4">
  <%= form_with model: @article do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-bold mb-2"%>
      <%= form.text_field :title, class: "form-input w-full border rounded border-2 border-gray-500 bg-gray-200"%>
    </div>
    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 font-bold mb-2"%>
      <%= form.text_area :description, class: "form-textarea w-full border rounded border-2 border-gray-500 bg-gray-200", rows: 3 %>
    </div>
    <div class="mb-4">
      <%= form.rich_text_area :body %>
    </div>
    <div class="mb-4">
      <%= form.label :image,  class: "block text-gray-700 font-bold mb-2" %>
      <%= form.file_field :image, class: "form-input w-full border rounded" %>
    </div>
    <div class="mb-4">
      <%= form.label :pictures,  class: "block text-gray-700 font-bold mb-2" %>
      <%= form.file_field :pictures, multiple: true, class: "form-input w-full border rounded" %>
    </div>
    <div>
      <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
    </div>
  <% end %>
</div>