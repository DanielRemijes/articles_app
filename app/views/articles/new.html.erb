<div>
  <h1>New Article</h1>
  <div>
    <%= form_with model: @article do |form| %>
      <div>
        <%= form.label :title  %>
        <%= form.text_field :title, class: "border" %>
      </div>
      <div>
        <%= form.label :description %>
        <%= form.text_area :description, class: "border" %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
