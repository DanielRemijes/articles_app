<div class="mt-6 ml-44 mr-80 px-8 pt-8 pb-6 bg-gray-200 shadow-xl rounded-xl">
  <h2 class="text-2xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class:"text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-2 border-gray-500 bg-gray-200 rounded w-full py-2 px-3 text-gray-700 focus:outline-none" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class:"text-gray-700 font-bold mb-2" %>
      <% if @minimum_password_length %>
      <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "border-2 border-gray-500 bg-gray-200 rounded w-full py-2 px-3 text-gray-700 focus:outline-none" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class:"text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border-2 border-gray-500 bg-gray-200 rounded w-full py-2 px-3 text-gray-700 focus:outline-none" %>
    </div>

    <div class="flex">
      <div class="actions">
        <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none mr-3" %>
      </div>
      <div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none inline-block">
      <%= render "devise/shared/links" %>
      </div>
  <% end %>
</div>
<div class="my-2 text-blue-600 border text-md">
  <%= link_to "Back to home", root_path %> 
</div>
