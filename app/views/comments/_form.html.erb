<div>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p>
      <%= form.text_area :body, class: "form-textarea w-5% border rounded border-2 border-gray-500 bg-gray-200", rows: 2%>
    </p>
    <p>
      <%= form.submit class: "text-sm bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-2 rounded"%>
    </p>
  <% end %>
</div>